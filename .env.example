# Web server
PORT=3000

# Supabase
SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
SUPABASE_ANON_KEY=your_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# GPT (server-side only)
# 暗号化キー（保存した GPT APIキー の暗号化/復号に使います）。変更すると既存の保存済みキーを復号できません。
GPT_API_KEY_ENCRYPTION_SECRET=replace_with_a_long_random_secret

# Next.js (client-side)
# Next.js ではブラウザから参照する env は NEXT_PUBLIC_ プレフィックスが必要です。
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key

# Notes:
# - SUPABASE_ANON_KEY is safe to expose to the browser.
# - SUPABASE_SERVICE_ROLE_KEY must stay server-side only.
