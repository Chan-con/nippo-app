{
  "name": "slack-tracker",
  "version": "1.0.0",
  "description": "Productivity tracker for lazy people - effortless task and time management",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "node scripts/ensure-icon.js && electron-builder",
    "package:win": "node scripts/ensure-icon.js && electron-builder --win",
    "dev": "nodemon --exec electron .",
    "web:start": "node web-server.js",
    "web:dev": "nodemon web-server.js"
  },
  "keywords": [
    "electron",
    "productivity",
    "task-management",
    "time-tracking",
    "lazy-friendly"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^22.0.0",
    "electron-builder": "^22.14.13",
    "nodemon": "^3.0.0",
    "pngjs": "^7.0.0"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.0",
    "node-fetch": "^2.7.0",
    "@supabase/supabase-js": "^2.49.1"
  },
  "build": {
    "appId": "com.yourcompany.slack-tracker",
    "productName": "SlackTracker",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "backend/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "SlackTracker"
    }
  }
}
