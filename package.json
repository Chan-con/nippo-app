{
  "name": "nippo-app",
  "version": "1.0.0",
  "description": "Modern daily report management app",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "package:win": "npm run build:python && electron-builder --win",
    "package:mac": "npm run build:python && electron-builder --mac",
    "package:linux": "npm run build:python && electron-builder --linux",
    "build:python": "cd backend && python -m PyInstaller --onefile --distpath ../dist/python api.py",
    "dev": "nodemon --exec electron ."
  },
  "keywords": ["electron", "nippo", "daily-report"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^26.0.0",
    "electron-builder": "^24.0.0",
    "nodemon": "^3.0.0"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "node-fetch": "^2.7.0"
  },
  "build": {
    "appId": "com.yourcompany.nippo-app",
    "productName": "日報管理アプリ",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "renderer/**/*",
      "backend/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "dist/python/",
        "to": "python/"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        },
        {
          "target": "zip",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "日報管理アプリ"
    },
    "mac": {
      "icon": "assets/icon.png"
    },
    "linux": {
      "icon": "assets/icon.png"
    }
  }
}